<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_tv_false"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/act_callPhone_img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_callPhone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x60"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="17601351492"
            android:textColor="@color/white"
            android:textSize="@dimen/x30"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/act_callPhone_tv_sate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="正在呼叫..."
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />

        <ImageView
            android:id="@+id/act_callPhone_img"
            android:layout_width="@dimen/x65"
            android:layout_height="@dimen/x65"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x40"
            android:background="@drawable/item_circle_red"
            android:padding="@dimen/x14"
            android:src="@mipmap/call_putdown_phone" />

        <LinearLayout
            android:id="@+id/act_callPhone_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/x40"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/act_callPhone_ll_green"
                android:layout_width="@dimen/x65"
                android:layout_height="@dimen/x65"
                android:layout_marginLeft="@dimen/x40"
                android:background="@drawable/item_circle_green"
                android:padding="@dimen/x14"
                android:src="@mipmap/call_phone" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/act_callPhone_ll_red"
                android:layout_width="@dimen/x65"
                android:layout_height="@dimen/x65"
                android:layout_marginRight="@dimen/x40"
                android:background="@drawable/item_circle_red"
                android:padding="@dimen/x14"
                android:src="@mipmap/call_putdown_phone" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>